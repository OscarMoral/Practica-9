---
import '../styles/global.css';
import AppContent from '../components/AppContent';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<title>{title}</title>
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="stylesheet" href="https://rsms.me/inter/inter.css" />
	</head>
	<body class="min-h-screen bg-gray-50">
		<AppContent client:only="react">
			<!-- Header -->
			<header class="bg-white shadow-sm">
				<nav class="container mx-auto px-4 py-4">
					<div class="flex justify-between items-center">
						<a href="/" class="text-2xl font-bold text-blue-600">CursosOnline</a>
						<div class="flex gap-4">
							<a href="/cursos" class="text-gray-600 hover:text-blue-600">Cursos</a>
							<a href="/categorias" class="text-gray-600 hover:text-blue-600">Categorías</a>
							<a href="/mi-cuenta" class="text-gray-600 hover:text-blue-600">Mi Cuenta</a>
						</div>
					</div>
				</nav>
			</header>

			<slot />

			<!-- Footer -->
			<footer class="bg-gray-800 text-white mt-12">
				<div class="container mx-auto px-4 py-8">
					<div class="grid grid-cols-1 md:grid-cols-3 gap-8">
						<div>
							<h3 class="text-xl font-bold mb-4">CursosOnline</h3>
							<p class="text-gray-400">
								Aprende tecnología con los mejores cursos online.
							</p>
						</div>
						<div>
							<h3 class="text-xl font-bold mb-4">Enlaces Rápidos</h3>
							<ul class="space-y-2">
								<li><a href="/cursos" class="text-gray-400 hover:text-white">Cursos</a></li>
								<li><a href="/categorias" class="text-gray-400 hover:text-white">Categorías</a></li>
								<li><a href="/sobre-nosotros" class="text-gray-400 hover:text-white">Sobre Nosotros</a></li>
								<li><a href="/contacto" class="text-gray-400 hover:text-white">Contacto</a></li>
							</ul>
						</div>
						<div>
							<h3 class="text-xl font-bold mb-4">Contacto</h3>
							<ul class="space-y-2 text-gray-400">
								<li>Email: info@cursosonline.com</li>
								<li>Teléfono: +34 900 123 456</li>
								<li>Dirección: Calle Principal 123, Madrid</li>
							</ul>
						</div>
					</div>
					<div class="border-t border-gray-700 mt-8 pt-8 text-center text-gray-400">
						<p>&copy; {new Date().getFullYear()} CursosOnline. Todos los derechos reservados.</p>
					</div>
				</div>
			</footer>
		</AppContent>
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
</style>
